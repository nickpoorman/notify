.navbar.navbar-fixed-top.navbar-default
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='#') Notify
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li(class=(nav === 'home' ? 'active' : ''))
          a(href='/') Home
        li(class=(nav === 'github' ? 'active' : ''))
          a(href='/about') Github
        li(class=(nav === 'contact' ? 'active' : ''))
          a(href='/contact') Contact
      include session-nav