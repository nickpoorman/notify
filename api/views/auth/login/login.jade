extends ../../layout
include ../../mixins/form-helpers-v3

block content
  .container.bump
    .col-md-4
      form(action="/login", method="post", role="form")
        mixin fieldAndLabel({name: 'email', label: 'Username or email', placeholder: 'Enter username or email'})
        mixin fieldAndLabel({type: 'password', name: 'password', label: 'Password'})
        button(type="submit", class="btn btn-default") Login
        a.btn.btn-link(href="/forgot-password") Forgot Password?